  	<div class="container">
  		<form method="post">
		<table id="revenueTable" class="table table-bordered table-hover" style="width:15%"> 
			<caption><h3>Revenue</h3></caption> 
			<thead>
				<tr> 
					<th>Total Revenue</th> 
				</tr> 
			</thead> 
			<tbody>
        <tr>
          <td>$ <%= sumprofit%></td>
				</tr>
			</tbody> 
		</table>

    <table id="popularTable" class="table table-bordered table-hover" > 
      <caption><h3>Popular Item</h3></caption> 
      <thead>
        <tr> 
          <th style="width:15%">Rank</th><th style="width:20%">Item Name</th><th>Unit Price</th><th>Profit</th> 
        </tr> 
      </thead> 
      <tbody>
        <% for (var i = 0; i < item.length; i++) {%>
        <tr>
          <% if (i == 0) {%> 
            <td class="danger"><span> <strong> 1th</strong></span></td>
          <% } else if (i == 1) { %>
            <td class="warning"><span> <strong> 2th</strong></span></td>
          <% } else if (i == 2) { %>
            <td class="success"><span> <strong> 3th</strong></span></td>
          <% } else { %> 
            <td><%= i + 1%></td>
          <% } %>
          <td><%= item[i].name  %></td>
          <td>$<%= item[i].price %></td>
          <td>$<%= item[i].profit %></td>
        </tr>
        <% } %>
      </tbody> 
    </table>


    <table id="machineTable" class="table table-bordered table-hover" > 
      <caption><h3>Machine Sales</h3></caption> 
      <thead>
        <tr> 
          <th style="width:15%">Rank</th><th style="width:20%">Machine Id</th><th style="width:39.5%">Address</th><th>Profit</th> 
        </tr> 
      </thead> 
      <tbody>
         <% for (var i = 0; i < machine.length; i++) {%>
         <tr>
          <% if (i == 0) {%> 
            <td class="danger"><span> <strong> 1th</strong></span></td>
          <% } else if (i == 1) { %>
            <td class="warning"><span> <strong> 2th</strong></span></td>
          <% } else if (i == 2) { %>
            <td class="success"><span> <strong> 3th</strong></span></td>
          <% } else { %> 
            <td><%= i + 1%></td>
          <% } %>
          <td><%= machine[i].id  %></td>
          <td><%= machine[i].address %></td>
          <td>$<%= machine[i].profit %></td>
        </tr>
        <% } %>
      </tbody> 
    </table>
	</form>
	
