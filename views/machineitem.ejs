  	<div class="container">
  	<% if (locals) { %>
  		<form method="post">
		<table id="itemTable" class="table table-bordered table-hover" > 
			<caption><h2>Machine in <%= machines[0].address %> </h2></caption> 
			<thead>
				<tr> 
					<th>Item Name</th> 
					<th>Capacity</th>
					<th>Quantity</th> 
				</tr> 
			</thead> 
			<tbody>
         <% for (var i = 0; i < machines.length; i++) { %>
				<tr>
          <td ><%= machines[i].name%></td>
					<td ><%= machines[i].capacity%></td>
          <% if (machines[i].quantity >= 70) { %>
            <td class="success"><%= machines[i].quantity %></td>
          <% } else if (machines[i].quantity < 30 && machines[i].quantity > 0) { %>
            <td class="warning"><%= machines[i].quantity %></td>
          <% } else if (machines[i].quantity == 0) { %>
            <td class="danger"><%= machines[i].quantity %></td>
          <% } else { %>
            <td><%= machines[i].quantity %></td>
          <% } %>
          
				</tr>
        <% } %>
			</tbody> 
		</table>
	</form>
